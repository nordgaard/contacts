
<h1>Add a new User!</h1>


<%= form_tag '/users', method: :post do %>

  <div>
    <%= label_tag :first_name  %>
    <%= text_field_tag :first_name %>
  </div>
  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :phone %>
    <%= text_field_tag :phone %>
  </div>

  <%= submit_tag "Add" %>

<% end %>

