<h1>Users</h1>

<div class="row">
  <% @users.each do |user| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <a href="/users/<%= user.id %>">
        <p><%= user.first_name %></p>
        <p><%= user.last_name %></p>
        <p><%= user.email %></p>
        <p><%= user.phone %></p>
      </a>
    </div>
  </div>
  <% end %>
</div>


